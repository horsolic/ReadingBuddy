<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Readingbuddy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF40916C</item>
        <item name="colorPrimaryVariant">#FF949494</item>
        <item name="colorOnPrimary">#FF40916C</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FF40916C</item>
        <item name="colorSecondaryVariant">#FF000000</item>
        <item name="colorOnSecondary">#FF000000</item>
        <!-- Status bar color. -->
<!--        <item name="statusBarBackground">@color/statusBarLight</item>-->
<!--        <item name="android:statusBarColor">@color/statusBarLight</item>-->
<!--        <item name="android:windowLightStatusBar">true</item>-->
        <!-- Navigation bar color. -->
<!--        <item name="android:navigationBarColor">@color/navigationBarLight</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Readingbuddy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Readingbuddy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Readingbuddy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Readingbuddy.Fullscreen" parent="Theme.Readingbuddy">
        <item name="android:actionBarStyle">@style/Widget.Theme.Readingbuddy.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Theme.Readingbuddy.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>